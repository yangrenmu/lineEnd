{
  "compilerOptions": {
    "target": "esnext",
    "lib": ["ES2015"],
    "allowJs": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "module": "es6",
    "outDir": "./build",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "skipLibCheck": true
  },
  "ts-node": {
    "esm": true
  },
  "noLib": true,
  "include": ["spider"],
  "exclude": ["node_modules", "**/node_modules/*"]
}
